@import 'nib'

global-reset()
html5-reset()

backgroundColor = #2f2f34
textColor = white

body {
  background: backgroundColor
  color: textColor
}

.auth {
  position: absolute
  z-index: 1
}

.space {
  userRadius = 70px

  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

  .connections {
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
  }

  .user {
    position: absolute
    top: 50%
    left: 50%
    color: black
    border-radius: 50%
    width: userRadius
    height: userRadius
    line-height: userRadius
    margin-left: -(userRadius / 2)
    margin-top: -(userRadius / 2)
    text-align: center
    overflow: hidden
    border: 2px white solid
    background: white

    img {
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: 100%
    }

    &.me {
      border-color: white
      cursor: -webkit-grab;
      box-shadow: 0 0 0 rgba(0, 0, 0, 0.8);
      transition: margin-top, box-shadow;
      transition-duration: 300ms;
      transition-timing-function: cubic-bezier(0.250, 1.650, 0.605, 0.670);
    }
  }

  &.dragging {
    &,
    .user {
      cursor: -webkit-grabbing;
    }

    .me {
      // margin-top: -(userRadius / 2) - 20px;
      // box-shadow: 0 20px 10px 0 rgba(0, 0, 0, 0.2);
      // transition-timing-function: cubic-bezier(0.190, 1.000, 0.220, 1.000);
    }
  }
}
