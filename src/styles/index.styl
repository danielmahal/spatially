@import 'nib'

global-reset()
html5-reset()

backgroundColor = #2f2f34
textColor = white

body {
  background: backgroundColor
  color: textColor
}

body,
button {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
}

button {
  font-size: 100%
  -webkit-appearance: none
  border: 0
  background: lighten(backgroundColor, 5)
  cursor: pointer
  padding: 0.8em
  border-radius: 2px
  color: white
  outline: none

  &:hover {
    background: lighten(@background, 2)
  }

  &:active {
    background: @background
  }
}

.auth {
  position: absolute
  z-index: 1
}

.menu {
  position: absolute
  top: 0
  right: 15px
}

.space {
  userRadius = 70px

  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

  .connections {
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
  }

  .user {
    position: absolute
    top: 50%
    left: 50%
    color: black
    border-radius: 50%
    width: userRadius
    height: userRadius
    line-height: userRadius
    margin-left: -(userRadius / 2)
    margin-top: -(userRadius / 2)
    text-align: center
    overflow: hidden
    border: 2px white solid
    background: white

    img, video {
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: 100%
    }

    &.me {
      border-color: white
      cursor: -webkit-grab;
      box-shadow: 0 0 0 rgba(0, 0, 0, 0.8);
      transition: margin-top, box-shadow;
      transition-duration: 300ms;
      transition-timing-function: cubic-bezier(0.250, 1.650, 0.605, 0.670);
    }
  }

  &.dragging {
    &,
    .user {
      cursor: -webkit-grabbing;
    }

    .me {
      margin-top: -(userRadius / 2) - 20px;
      box-shadow: 0 20px 10px 0 rgba(0, 0, 0, 0.2);
      transition-timing-function: cubic-bezier(0.190, 1.000, 0.220, 1.000);
    }
  }
}

.login {
  position: absolute
  width: 300px
  top: calc(50% - 90px)
  left: calc(50% - 150px)
  text-align: center

  h1 {
    font-size: 32px
    font-weight: 300
    line-height: 1.2em
    margin-bottom: 0.8em
  }

  p {
    line-height: 1.4em
  }

  .login-button.facebook {
    margin-bottom: 1em
    background: #3D599F

    &:hover {
      background: lighten(#3D599F, 5)
    }

    &:active {
      background: #3D599F
    }
  }

  .no-worries {
    color: rgba(white, 0.4)
  }
}
